package com.kiran.collection;

import java.util.ArrayList;
import java.util.List;

public class LinkedListPratice {
	public static void main(String[] args) {
		
		/*
		 * LinkedList  --- Introduced in Java 1.2 (Collections Framework)
		 * Collection  --- Part of List, Deque interfaces
		 * Generics    --- Introduced in Java 1.5 <Wrapper Class | Objects>
		 *
		 * Size        --- Number of elements currently stored
		 * Capacity    --- Not applicable (LinkedList uses nodes, not arrays)
		 *                 LinkedList<String> ll = new LinkedList<>();
		 *
		 *
		 * Default Capacity                  --- Not applicable (No internal array)
		 * Initial Capacity                  --- Not applicable
		 * Allow Duplicates                  --- Yes
		 * Allow null values                 --- Yes
		 * Maintain the insertion order      --- Yes
		 * Maintain the sorted order         --- No
		 * Offer random access               --- No (Traversal required, O(n))
		 * Synchronized (One task at a time) --- No
		 * Thread Safe                       --- No
		 *
		 * Internal Structure                --- Doubly Linked List (Each node has prev & next)
		 *
		 * What is it good at?               --- Best for insertion & deletion operations
		 *                                      Frequent add/remove from start/middle/end,
		 *                                      Implementing queues, deques, task scheduling.
		 *
		 * Performance                       --- add/remove = O(1)
		 *                                      get/search = O(n)
		 *
		 * Limitations                       --- Consumes more memory than ArrayList
		 *                                      Slow for index-based access
		 */
		
		// Creation of a LinkedList
		List<String> llc1 = new ArrayList<>();
		
		
		// Addition of elements into the list
		llc1.add("Manikyam");
		llc1.add(2, "Kiran");
		llc1.addFirst("Rattaiah");
		llc1.add("Vamsi");
		llc1.addLast("Akash");
		
		System.out.println(llc1);
		
		List<String> llc2 = new ArrayList<>();
		llc2.add("Ravi");
		llc2.add("Mohan");
		llc2.add("Vasanth");
		llc2.add("Yesu");
		llc2.add(2,"Pradeep");
		llc2.add(null);
		
		
		System.out.println("\n");
		// Retrival of elements from the list
		System.out.println(llc1.get(6));
		System.out.println(llc2.getLast());
		System.out.println(llc2.getFirst());
		System.out.println(llc1.getClass());
		System.out.println(llc1.toString());
		System.out.println(llc1.firstElement());
		System.out.println(llc1.lastElement());

	}
}
