package com.kiran.arrays;

import java.util.Arrays;

public class ArrayMerge {
	
	public int[] mergeOfArray(int[] arr1, int[] arr2 ) {
		
		int index = 0;
		int[] newArr = new int[arr1.length + arr2.length];
		
		for (int value : arr1) {
			newArr[index++] = value;
		}
		
		for (int value : arr1) {
			newArr[index++] = value;
		}
		
		return newArr;
	}
	
	public static void main(String[] args) {
		int[] arr1 = new int[] {1,2,3,4,5};
		int[] arr2 = new int[] {6,7,8,9};
		
		ArrayMerge answer = new ArrayMerge();
		
		int[] newArr = answer.mergeOfArray(arr1, arr2);
		System.out.println(Arrays.toString(newArr));
	}
}
